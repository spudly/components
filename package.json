{
  "name": "@spudly/components",
  "repository": "git+https://github.com/spudly/components.git",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/spudly/components/issues"
  },
  "private": true,
  "dependencies": {
    "@babel/core": "^7.6.4",
    "@storybook/react": "^5.2.5",
    "@testing-library/react": "^9.3.0",
    "@types/diff": "^4.0.2",
    "@types/jest": "^24.0.19",
    "@types/react": "^16.9.9",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-eslint": "^10.0.0",
    "babel-loader": "^8.0.6",
    "depcheck": "^0.8.3",
    "diff": "^4.0.1",
    "eslint": "^6.5.1",
    "eslint-config-react-app": "^5.0.2",
    "eslint-plugin-flowtype": "^3.0.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-jsx-a11y": "^6.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^1.0.0",
    "fast-diff": "^1.2.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "monaco-editor": "^0.18.1",
    "monaco-editor-webpack-plugin": "^1.7.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.0",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "eslintIgnore": [
    "node_modules",
    "build"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn lint && yarn test && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --ext .js,.jsx,.ts,.tsx --max-warnings=0 --fix",
      "git add"
    ]
  },
  "author": "Stephen John Sorensen <shuoink@gmail.com>",
  "bolt": {
    "workspaces": [
      "packages/*"
    ]
  },
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings=0",
    "test": "jest",
    "tsc": "tsc --noEmit",
    "rebolt": "rm -rf node_modules && bolt exec -- rm -rf node_modules && bolt",
    "storybook": "start-storybook -p 3000",
    "build-storybook": "build-storybook",
    "sync": "node ./scripts/sync.js",
    "depcheck": "node ./scripts/depcheck.js"
  }
}
